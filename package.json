{
  "name": "@pdenya/codemap",
  "version": "0.1.0",
  "description": "Generate a .codemap folder in your repo so Claude Code and Codex can get the lay of the land faster and with less token usage.",
  "main": "dist/index.js",
  "bin": {
    "codemap": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdenya/CodeMap.git"
  },
  "keywords": [
    "codemap",
    "code-analysis",
    "tree-sitter",
    "ast",
    "documentation",
    "ai-tools"
  ],
  "author": "pdenya",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pdenya/CodeMap/issues"
  },
  "homepage": "https://github.com/pdenya/CodeMap#readme",
  "dependencies": {
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "ignore": "^7.0.5",
    "simple-git": "^3.30.0",
    "tree-sitter": "0.21.1",
    "tree-sitter-go": "0.23.4",
    "tree-sitter-java": "0.23.5",
    "tree-sitter-javascript": "0.23.1",
    "tree-sitter-php": "0.23.6",
    "tree-sitter-python": "0.23.4",
    "tree-sitter-objc": "3.0.2",
    "tree-sitter-ruby": "0.23.1",
    "tree-sitter-rust": "0.23.1",
    "tree-sitter-swift": "0.7.1",
    "tree-sitter-typescript": "0.23.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
